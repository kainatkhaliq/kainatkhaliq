@model kainatkhaliq.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<style>
    .delete-title {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: white;
    }

    .delete-message {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .student-details {
        margin-top: 20px;
    }

    .col-sm-2 {
        font-weight: bold;
    }

    .btn-danger {
        background-color: turquoise;
        border-color: turquoise;
        color: white;
    }

        .btn-danger:hover {
            background-color: mediumturquoise;
            border-color: mediumturquoise;
            color: white;
            font-weight: bold;
        }

    .btn {
        margin-right: 5px;
        text-decoration: none;
        color: white;
        padding: 8px 16px;
        border: 1px solid #007bff;
        border-radius: 4px;
        font-weight: bold;
        background-color: turquoise;
    }

        .btn:hover {
            text-decoration: underline;
            color: white;
        }

    .btn-back {
        color: white;
    }
</style>

<h1 class="delete-title">Delete</h1>

<h3 class="delete-message">
    <span style="color: darkturquoise;">Are you sure you want to delete this?</span>

</h3>

<div class="student-details">
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contact)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-back">Back to List</a>
    </form>
</div>