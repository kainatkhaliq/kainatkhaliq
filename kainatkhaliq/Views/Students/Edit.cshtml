@model kainatkhaliq.Models.Student

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        /* Internal CSS for form styling */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa; /* Change background color as desired */
        }

        .container {
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-weight: bold;
        }

        .form-control {
            border-radius: 10px;
        }

        .btn {
            margin-right: 5px;
            text-decoration: none;
            color: white;
            padding: 8px 16px;
            border: 1px solid turquoise;
            border-radius: 4px;
            font-weight: bold;
            background-color: turquoise;
            border-radius: 30px;
        }

            .btn:hover {
                background-color: darkturquoise;
                border-color: turquoise;
                color: black; /* Change text color on hover */
            }



        /* Internal CSS for table styling */
        table {
            width: 100%;
            border-radius: 10px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        /* Internal CSS for the "Create" heading */
        h1 {
            font-weight: bold;
            color: turquoise;
            margin-bottom: 0;
            margin-top: 20px;
        }

        .container {
            padding: 20px;
            margin-top: -20px; /* Adjust the value as needed */
        }

        hr {
            display: none;
        }
    </style>

</head>
<body>
    <div class="container">
        <h1>Edit</h1>

        <hr />
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Semester" class="control-label"></label>
                    <input asp-for="Semester" class="form-control" />
                    <span asp-validation-for="Semester" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contact" class="control-label"></label>
                    <input asp-for="Contact" class="form-control" />
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div style="display: flex; justify-content: flex-end; margin-right: 750px;">
        <a asp-action="Index">Back to List</a>
    </div>



    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
