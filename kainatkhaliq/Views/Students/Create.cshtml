@model kainatkhaliq.Models.Student

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        /* Internal CSS for form styling */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa; /* Change background color as desired */
        }

        .container {
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-weight: bold;
        }

        .form-control {
            border-radius: 10px;
        }

        .btn-primary {
            display: inline-block;
            padding: 7px 13px; /* Adjust the padding to increase width and decrease height */
            margin-bottom: 0;
            font-size: 12px; /* Decrease the font size for a smaller button */
            font-weight: 400;
            line-height: 1.42857143;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            cursor: pointer;
            border: 1px solid transparent;
            border-radius: 20px; /* Rounded corners */
            color: #fff;
            background-color: turquoise;
            width: auto; /* Medium width, adjust as needed */
            text-decoration: none;
        }

            .btn-primary:hover {
                background-color: turquoise;
                border-color: turquoise;
            }


        /* Internal CSS for table styling */
        table {
            width: 100%;
            border-radius: 10px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        /* Internal CSS for the "Create" heading */
        h1 {
            font-weight: bold;
            color: turquoise;
        }

        .container {
            padding: 20px;
            margin-top: -20px; /* Adjust the value as needed */
        }

    </style>

</head>
<body>
    <div class="container">


        @{
            ViewData["Title"] = "Create";
        }

        <h1>Create</h1>
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Semester" class="control-label"></label>
                    <input asp-for="Semester" class="form-control" />
                    <span asp-validation-for="Semester" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contact" class="control-label"></label>
                    <input asp-for="Contact" class="form-control" />
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div style="display: flex; justify-content: flex-end; margin-right: 750px;">
        <a asp-action="Index">Back to List</a>
    </div>



    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
