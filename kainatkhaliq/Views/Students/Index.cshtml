@model IEnumerable<kainatkhaliq.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Internal CSS styles */
    .btn {
        padding: 6px 12px; /* Adjust padding to make buttons smaller */
        border: 1px solid #007bff;
        border-radius: 4px;
        background-color: turquoise;
        color: white;
        text-decoration: none;
        font-weight: bold;
        margin-right: 5px;
        font-size: 14px; /* Adjust font size */
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px; /* Rounded table box */
        overflow: hidden; /* Hide overflow for rounded corners */
    }


    .btn:hover {
        background-color: mediumturquoise;
        border-color: mediumturquoise;
        text-decoration: underline;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
